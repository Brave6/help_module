<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpModuleFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="Help Module"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="297dp"
        android:text="Application Guidelines"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_faqs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="69dp"
        android:layout_marginEnd="69dp"
        android:text="FAQS"
        app:layout_constraintEnd_toEndOf="@+id/btn_gl"
        app:layout_constraintStart_toStartOf="@+id/btn_ci"
        app:layout_constraintTop_toBottomOf="@+id/btn_gl" />

    <Button
        android:id="@+id/btn_ci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Informations"
        app:layout_constraintEnd_toEndOf="@+id/btn_gl"
        app:layout_constraintTop_toBottomOf="@+id/btn_faqs" />


</androidx.constraintlayout.widget.ConstraintLayout>